<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      {{ page_title -}}
      {%- if current_tags %}
        &ndash; tagged "{{ current_tags | join: ', ' }}"
      {%- endif -%}
      {%- if current_page != 1 %}
        &ndash; Page {{ current_page -}}
      {%- endif -%}
      {%- unless page_title contains shop.name %}
        &ndash; {{ shop.name -}}
      {%- endunless -%}
    </title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
    {{ 'flickity.css' | asset_url | stylesheet_tag }}

    {% comment %}
    {{ 'owl.carousel.min.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'owl.carousel.min.js' | asset_url }}" defer></script>
    {% endcomment %}

    <script src="{{ 'jquery.min.js' | asset_url }}" defer></script>
    <script src="{{ 'application.js' | asset_url }}" defer></script>
    <script src="{{ 'bootstrap.min.js' | asset_url }}" defer></script>
    <script src="{{ 'flickity.js' | asset_url }}" defer></script>
  </head>
  <body>
    <main role="main">
      {% section 'announcement-bar' %}
      {% section 'header' %}
      {{ content_for_layout }}
      {% section 'footer' %}
    </main>
  </body>
</html>