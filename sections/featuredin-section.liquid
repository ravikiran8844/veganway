{% if section.blocks.size > 0 %}
  <div class="fluid-container featured-section-{{ section.id }} pb-5">
    <div class="col-12">
      {% if section.settings.bg_image != blank %}
        <div class="featured-section text-center pt-5">
          {% if section.settings.heading != blank %}
            <div class="featured-section__heading h2 pb-5">{{ section.settings.heading }}</div>
          {% endif %}
        </div>
      </div>
      <div class="featured-item__wrapper page-width d-flex flex-row overflow-scroll">
        {% for block in section.blocks %}
          <div class="col-12 col-md-3 p-3">
            {% if block.settings.image != blank and block.settings.text != blank %}
              <div class="text-center">
                <div class="fs__logo-wrapper">
                  {% render 'image', class: '', mobileSrc: block.settings.image, desktopSrc: block.settings.image %}
                </div>
                <p class="mt-4">{{ block.settings.text }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    {% endif %}
  </div>
{% endif %}

{% style %}
  .featured-section-{{ section.id }}{
    background-image: url('{{ section.settings.bg_image | image_url: width: 480, height: 480 }}');
    background-size: cover;
  }
  .featured-item__wrapper {
    padding: 0 50px;
  }
  .fs__logo-wrapper {
    height: 67.05px;
  }
  .featured-section__heading {
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 40px;
    line-height: 137.52%;
  }
{% endstyle %}

{% schema %}
{
  "name": "Featuredin Section",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Text Color"
    }
  ],
  "blocks": [
    {
      "name": "Featured item",
      "type": "item-block",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featuredin Section"
    }
  ]
}
{% endschema %}