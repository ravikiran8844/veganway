<div class="fluid-container recipes-section--{{ section.id }} p-4">
  <div class="recipes-section__wrapper page-width my-5 d-flex flex-wrap justify-content-center">
    <div class="d-flex flex-column flex-lg-row">
      <div class="col-12 col-lg-4  p-2">
        <div class="fs-3 recipes-section__heading">{{ section.settings.heading }}</div>
        <div class="recipes-section__text my-3">{{ section.settings.description }}</div>
        <div>
          <a class="btn recipes-section__button  my-4 px-4" href="{{ section.settings.link_url }}">{{ section.settings.link_text }}</a>
        </div>
      </div>
      <div class="recipe-items__wrapper col-12 col-lg-8 d-flex overflow-auto">
        <div class="col-8 col-sm-4 p-2">
          <div>
            {% render 'image', class: 'recipe-image media media--portrait', mobileSrc: section.settings.recipe1image, desktopSrc: section.settings.recipe1image %}
          </div>
          <div class="recipe-title my-3">{{ section.settings.recipe1text }}</div>
          <div>
            <a class="recipe-link" href="{{ section.settings.recipe1link }}">Read More</a>
          </div>
        </div>
        <div class="col-8 col-sm-4 p-2">
          <div>
            {% render 'image', class: 'recipe-image media media--portrait', mobileSrc: section.settings.recipe2image, desktopSrc: section.settings.recipe2image %}
          </div>
          <div class="recipe-title my-3">{{ section.settings.recipe2text }}</div>
          <div>
            <a class="recipe-link" href="{{ section.settings.recipe2link }}">Read More</a>
          </div>
        </div>
        <div class="col-8 col-sm-4 p-2">
          <div>
            {% render 'image', class: 'recipe-image media media--portrait', mobileSrc: section.settings.recipe3image, desktopSrc: section.settings.recipe3image %}
          </div>
          <div class="recipe-title my-3">{{ section.settings.recipe3text }}</div>
          <div>
            <a class="recipe-link" href="{{ section.settings.recipe3link }}">Read More</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% assign main_font = "Sharp Grotesk" %}
{% assign second_font = "Inter" %}
{% comment %}
{% if template contains "index" %}
{% assign main_font = "Sharp Grotesk" %}
{% assign second_font = "Inter" %}
{% endif %}
{% if template contains "product" %}
{% assign main_font = "Pluto" %}
{% assign second_font = "Pluto" %}
{% endif %}
{% endcomment %}<style>
  .recipe-image img {}
  .recipes-section--{{ section.id }}{
    background-color: {{ section.settings.bg_color }}
    ;
  }
  .recipes-section__heading {
    font-family: {{ main_font }}
    ;
    font-style: normal;
    font-weight: 500;
    line-height: 128.5%;
    text-transform: capitalize;
    color: {{ section.settings.heading_color }}
    ;
  }
  .recipes-section__text {
    font-family: {{ second_font }}
    ;
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 142.5%;
    color: {{ section.settings.description_color }}
    ;

  }
  .recipes-section__button {
    font-family: {{ main_font }}
    ;
    font-style: normal;
    font-weight: 500;
    background: {{ section.settings.btn_color }}
    ;
    color: #fff;
    border-radius: 28.5714px;
  }
  .recipes-section__button:hover {
    color: #fff !important;
  }
  .recipe-title {
    font-family: {{ main_font }}
    ;
    font-style: normal;
    font-weight: 500;
    font-size: 14px;
    line-height: 109%;
    color: #181818;
  }
  .recipe-link {
    font-family: {{ second_font }}
    ;
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 109%;
    text-decoration-line: underline;
    color: {{ section.settings.btn_color }}
    ;
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  .recipe-items__wrapper::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .recipe-items__wrapper {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
