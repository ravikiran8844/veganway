<div class="fluid-container">
  <div class="moneyback-section d-flex flex-column flex-md-row">
    <div class="col-12 col-md-6 first-col--{{ section.id}}">
      <div class="moneyback-section__image w-100">
        {% render 'image', class: 'media media--16-9', mobileSrc: section.settings.bg_image, desktopSrc: section.settings.bg_image %}

        <div class="moneyback-content h-100 w-100">
          <div class="w-50">
            <div class="h2">{{ section.settings.heading }}</div>
            <p>{{ section.settings.subheading }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6">
      <div class="moneyback-section__wrapper moneyback-{{section.id}} second-col--{{ section.id}}">
        <div class="d-flex justify-content-center align-items-center h-100">
          {% render 'image', class: '', mobileSrc: section.settings.image2, desktopSrc: section.settings.image2 %}
        </div>
      </div>

    </div>
  </div>
</div>

{% style %}
  .first-col--{{ section.id}}{
    color: #FFFFFF;


  }
  .second-col--{{ section.id}}{
    background-color: {{ section.settings.bg_color}}
    ;
  }
  .moneyback-section__wrapper {}
  .moneyback-section__image {
    position: relative;
  }
  .moneyback-content {
    position: absolute;
    top: 0;
    right: 0;
  }
  .moneyback--image {
    height: 499px;
  }
{% endstyle %}

{% schema %}
  {
    "name": "Moneyback Section",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Subheading"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "background color",
        "default": "#000000"
      }, {
        "type": "image_picker",
        "id": "image2",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Moneyback Section"
      }
    ]
  }
{% endschema %}