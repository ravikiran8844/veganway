{% if section.blocks.size > 0 %}
  <div class="featured-product__wrapper--{{section.id}} fluid-container">
    <div class="row g-0 p-5">
      <div class="col-12 text-center">
        <h2 class="fs-2 featured-product__main-heading">{{ section.settings.heading }}</h2>
      </div>
      <div class="col-12 mt-5 m-auto  page-width" data-flickity='{ "cellAlign": "left", "contain": true,"pageDots": false ,"groupCells": true }'>
        {% for block in section.blocks %}
          <div class="col-12 col-sm-6 col-md-4" style="height: 563px;">
            <div class="featured-product-card__wrapper shadow-sm py-4 mx-2 bg-light text-center">
              <div class="mb-3">
                <img
                  class="featured-product__image"
                  src="{{block.settings.product_image | img_url: 'medium'}}"
                  alt="">
              </div>
              <h2 class="featured-product__title">
                {{ block.settings.product_title }}
              </h2>
              <p class="featured-product__caption">{{ block.settings.product_caption }}</p>
              <p class="featured-product__price">{{ block.settings.product_id.price | money_with_currency }}</p>
              <div>
                <a class="btn btn-outline-success px-4 featured-product__button" href="{{ block.settings.product_id.url }}">Shop Now</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% style %}
  .featured-product__wrapper--{{ section.id}}{
    background-color: {{ section.settings.bg_color}}
    ;

  }
{% endstyle %}


<style>
  .flickity-prev-next-button.previous {
    left: -40px;
  }
  .flickity-prev-next-button.next {
    right: -40px;
  }
  .featured-product__main-heading {
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    line-height: 51px;
    color: #181818;
  }
  .featured-product__image {
    max-width: 190.9px;
    max-height: 315.4px;
  }
  .featured-product__title {
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 19.3728px;
    line-height: 123.5%;
    color: #181818;
  }
  .featured-product__caption {
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 14.9021px;
    line-height: 148.5%;
    color: #666666;
  }
  .featured-product__price {
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 20.8868px;
    line-height: 100%;
    letter-spacing: -0.03em;
    color: #181818;
  }

  .featured-product-card__wrapper {
    border-radius: 20px;
    background-color: #fff !important;
    max-width: 372px;
  }
  .featured-product__button {
    border-radius: 30.8044px;
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 17.2504px;
  }
  .featured-product__button:hover {
    background: #017149;
  }
</style>


{% schema %}
  {
    "name": "Featured Products",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "default": "#E5E5E5",
        "label": "Background Color"
      }, {
        "type": "color",
        "id": "card_color",
        "default": "#FFF",
        "label": "Product Card Color"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our Most Loved Flavours"
      }
    ],
    "blocks": [
      {
        "name": "Product",
        "type": "product-section",
        "settings": [
          {
            "type": "product",
            "id": "product_id",
            "label": "Product"
          }, {
            "type": "image_picker",
            "id": "product_image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "product_title",
            "label": "Title"
          }, {
            "type": "text",
            "id": "product_caption",
            "label": "Caption"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Products"
      }
    ]
  }
{% endschema %}