{{ 'footer.css' | asset_url | stylesheet_tag }}

<div class="footer--{{section.id}} d-flex justify-content-center fluid-container py-3 px-4">
  <div class="page-width row g-0 p-2">
    <div
      class="col-12 col-md-6 col-lg-4 p-2 footer__line px-3">
      <div class="d-flex mb-3">
        <div><img src="{{section.settings.logo | img_url}}" alt="Footer Logo"></div>
        <div class="ms-3">
          <div class="fs-2 footer__main-heading">{{ section.settings.heading }}</div>
          <div class="footer__main-description">{{ section.settings.description }}</div>
        </div>
      </div>
      <div class="footer__newsletter">
        {% form 'customer' %}
          <div class="email my-2">
            <input
              class="footer__ns-label p-2"
              placeholder="EMAIL ADDRESS"
              type="email"
              name="contact[email]" />
          </div>
          <div class="mobile my-2">
            <input
              class="footer__ns-label p-2"
              placeholder="PHONE NUMBER"
              type="tel"
              name="contact[note][mobile]"
              pattern="[0-9\-]*" />
          </div>
          <p class="footer_ns-text mt-3">By clicking Sign Up, you agree to receive marketing text messages from Fable & Mane at the number provided, including messages sent by autodialer. Consent is not a condition of any purchase. Message and data rates may apply. Message frequency varies. Reply HELP for help or STOP to cancel.</p>
          <div class="submit">
            <button class="btn footer__ns-button px-4" type="submit">Sign up</button>
          </div>
        {% endform %}
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-8 p-4">
      <div class="d-flex flex-wrap">
        {% for block in section.blocks %}
          <div class="col-6 col-md-4 px-2">
            <ul class="list-unstyled">
              <li class="list-unstyled footer-list-title mb-3">{{ block.settings.title }}</li>
              {% for link in block.settings.list.links %}
                <li class="list-unstyled mb-2">
                  <a class="footer-pagelinks  footer-link-underline" href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      </div>
