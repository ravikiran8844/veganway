<style>
  .footer--{{ section.id}}{
    background-color: {{ section.settings.bg_color}}
    ;
    color: {{ section.settings.text_color}}
    ;
    font-family: 'Sharp Grotesk';
  }
  .footer-links {
    text-decoration-line: underline;
  }
  @media(max-width:767px) {
    .footer-link-underline {
      text-decoration-line: underline;
    }
  }
</style>



{% schema %}
  {
    "name": "Footer",
    "class": "section",
    "tag": "footer",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#181818"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#FFFFFF"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Get 10% off!"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Sign up to our newsletter - the place for wild news, invitations and good karma treats!"
      }, {
        "type": "url",
        "id": "fabebook_url",
        "label": "Facebook Url"
      }, {
        "type": "url",
        "id": "instagram_url",
        "label": "Instagram Url"
      }, {
        "type": "url",
        "id": "youtube_url",
        "label": "Youtube Url"
      }, {
        "type": "url",
        "id": "location_url",
        "label": "Location Url"
      }
    ],
    "blocks": [
      {
        "name": "Linklist",
        "type": "list-block",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
          }, {
            "type": "link_list",
            "id": "list",
            "label": "List"
          }
        ]
      }
    ]
  }
{% endschema %}