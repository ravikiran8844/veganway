<style>
  .owl-item {
    width: 100%;

  }
  .screenshot_slider .owl-item .item {
    -webkit-box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
    box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
    box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
    border: 0.951133px solid #D2D2D2;
    border-radius: 15.6176px;
  }
  .screenshot_slider .owl-item.center .item {
    border: 0.951133px solid #D2D2D2;
    border-radius: 15.6176px;
  }

  @media(min-width:800px) {
    .owl-item {
      width: 100%;
    }

    .owl-item .item {
      transform: translate3d(0, 0, 0); /* DO NOT REMEMBER WHERE TU PUT THIS, SEARCH FOR 3D ACCELERATION */
      // transform: scale(0.9);
      // transition: all .25s ease-in-out;
      margin: 50px 0; /* OVERWRITE PLUGIN MARGIN */
    }

    .screenshot_slider .owl-item .item {
      -webkit-transition: 0.3s;
      -webkit-box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
      box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1);
      -o-transition: 0.3s;
      transition: 0.3s;
      -webkit-transform: scale(0.80);
      -ms-transform: scale(0.80);
      transform: scale(0.80);
      border: 0.951133px solid #D2D2D2;
      border-radius: 15.6176px;
    }

    .screenshot_slider .owl-item.center .item {
      -webkit-transform: scale(1.15);
      -ms-transform: scale(1.15);
      transform: scale(1.15);
      border: 0.951133px solid #D2D2D2;
      border-radius: 15.6176px;
    }
  }
</style>

<style>
  .owl-dots {
    text-align: center;
    padding-top: 15px;
    text-align: center;
    margin-bottom: 40px;

  }
  .owl-dots button.owl-dot {
    width: 13.32px;
    height: 13.32px;
    border-radius: 6.65793px;

    display: inline-block;
    background: transparent;
    border: 0.951133px solid #2B2B2B;
    margin: 0 3px;
  }
  .owl-dots button.owl-dot.active {
    background-color: #000;
  }
  .owl-dots button.owl-dot:focus {
    outline: none;
  }
</style>
{% schema %}
  {
    "name": "Owl Carousel Testimonials",
    "class": "section",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#E5E5E5"
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Rated 5 star"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "By 50,000 Customers"
      }
    ],
    "blocks": [
      {
        "name": "Testimonial",
        "type": "testimonial-section",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "label": "Name",
            "id": "name",
            "default": "Name"
          }, {
            "type": "richtext",
            "label": "Text",
            "id": "text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Owl Carousel Testimonials"
      }
    ]
  }
{% endschema %}



<script>
  // Owlcarousel
  $(document).ready(function() {
    $(".owl-carousel").owlCarousel({
      loop: true,
      margin: 20,
      autoplay: true,
      autoplayTimeout: 3000,
      autoplayHoverPause: true,
      center: true,
      responsiveClass: true,
      responsive: {
        0: {
          items: 1
        },
        600: {
          items: 1
        },
        800: {
          items: 3
        }
      }
    });
  });
</script>