<div class="fluid-container px-4">
  <div class="row g-0 page-width m-auto mt-5 mb-2">
    <div class="col-12 text-center mb-5">
      <div class="fs-2 pis-heading m-auto">
        {{ section.settings.heading }}
      </div>
    </div>
    <div class="pis_wrapper col-12">
      {% for block in section.blocks %}
        <div class="pis-item">
          <div>
            <img
              class="pis-item__img"
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.text }}">
          </div>
          {% if block.settings.text != blank %}
            <div class="pis-item__text my-3 px-2">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>


<style>
  .pis_wrapper {
    display: flex;
    overflow: auto;
  }
  .pis-heading {
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    line-height: 43px;
    text-align: center;
    max-width: 663px;
    color: #181818;

  }
  .pis-item {
    width: 196px;
    height: auto;
  }
  .pis-item__img {
    width: 196px;
    height: 151px;
    padding: 10px;
  }
  @media(min-width:768px) {
    .pis-item {
      width: 20%;
      padding: 10px;
    }
    .pis_wrapper {
      display: flex;
      flex-wrap: wrap;
    }
    .pis-item__img {
      width: 100%;
    }
  }

  .pis-item__text {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 22px;
    text-transform: capitalize;
    text-align: center;
    color: #181818;
  }
</style>

{% schema %}
{
  "name": "Product Ingredients",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Vegan Way is made with over 20+ super foods & Nutrients"
    }
  ],
  "blocks": [
    {
      "name": "Ingredient",
      "type": "ingredient-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Ingredients"
    }
  ]
}
{% endschema %}