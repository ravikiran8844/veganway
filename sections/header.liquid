<style>
  .header-logo{
    position: absolute;
    top: 30px;
    left: 50%;
    transform: translate(-50%,-50%);
  }

  @media (min-width:768px) {
    .header-logo{
    position: static;
    transform: none;
  }
  header{
    position: static;
  }
  }
  header{
    position: relative;
    background-color: {{ section.settings.bg_color }};

  }

  .header_nav {
    position: static;
    width: 100%;
    display: flex;
    background-color: {{ section.settings.bg_color }};
}
.sticky {
  position: fixed;
  top: 0;
  width: 100%;
  z-index:30;
}
.header_nav svg{
  cursor: pointer;
}

  .nav-link {
    font-family: 'Sharp Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 134.8%;
    color: #000000;
  }
  .nav-link:hover{
    color: #000000;
  }
  .navbar {
    transition: background-color 0.3s ease;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9999;
  }
  .navbar.navbar-scrolled {
    background-color: rgba(0, 0, 0, 0.1) !important;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  .sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  background-color: #017149;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
}
  .footer_sidenav .ftr {
    bottom: 10%;
}
.overlay-menu {
    position: fixed;
    top: 0;
    width: 0;
    height: 101%;
    background-color: #000000e6;
    z-index: 110;
    -webkit-transition: 0.8s;
    transition: 0.8s;
    width: 0%;
    right: 0;
}
  .footer_sidenav .ftr button {
    font-family: 'Sharp Grotesk';
    border: 1px solid;
    border-radius: 20px;
    padding: 10px 50px;
    background-color: transparent;
    color: #fff;
}
  .footer_sidenav .ftr button.contact {
    border: none;
    border-bottom: 1px solid #fff;
    border-radius: 0px;
}
  button.contact {
    float: right;
}
.open_menu  .overlay-menu {
  width: 100%;
}
svg#vw_tgm {
    cursor: pointer;
}
.sidenav .vw_ul a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 32px;
    color: #fff;
    font-family: 'Sharp Grotesk';
    display: block;
    transition: 0.3s;
    z-index: 99;
    border-bottom: 1px solid #ffffff45;
    padding-bottom: 2%;
    margin-bottom: 2%;
}

.sidenav a:hover {
  color: #f1f1f1;
}

.sidenav span.close_btns {
    font-size: 30px;
    color: #fff;
    cursor: pointer;
}
@media (min-width: 320px) and (max-width: 480px) {
   body.open_menu div#VW_Sidenav {
    width: 100% !important;
}
  .footer_sidenav .ftr button {   
    padding: 10px 24px;
    font-size: 14px !important;
}
  .sidenav .vw_ul a {  
    font-size: 22px;   
}
  }
</style>

<!-- JavaScript -->

<script>
  window.onscroll = function() {myFunction()};

// Get the header
var header = document.getElementById("myHeader");

// Get the offset position of the navbar
var sticky = header.offsetTop;

// Add the sticky class to the header when you reach its scroll position. Remove "sticky" when you leave the scroll position
function myFunction() {
  if (window.pageYOffset > sticky) {
    header.classList.add("sticky");
  } else {
    header.classList.remove("sticky");
  }
}
</script>


<script>
  $(document).ready(function() {
    $(window).scroll(function() {
      if ($(window).scrollTop() > 50) {
        $('.navbar').addClass('navbar-scrolled');
      } else {
        $('.navbar').removeClass('navbar-scrolled');
      }
    });
  });
  function openNav() {
  document.getElementById("VW_Sidenav").style.opacity = "1";
  document.getElementById("VW_Sidenav").style.width = "50%";
  document.body.classList.add("open_menu");
 }

  function closeNav() {
    document.getElementById("VW_Sidenav").style.opacity = "0";
    document.getElementById("VW_Sidenav").style.width = "0";
    document.body.classList.remove("open_menu");
  }
</script>


