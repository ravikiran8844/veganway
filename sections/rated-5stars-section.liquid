{% if section.blocks.size > 0 %}
  <div class="rated-section wrapper--{{section.id}} p-5 fluid-container">
    <div class="row  g-0 text-center">
      <div class="col-12">
        <div class="d-flex justify-content-center align-items-center">
          <span class="rated-section__caption-text me-2">{{ section.settings.caption }}</span>
          <span>
            <svg
              width="122"
              height="22"
              viewBox="0 0 122 22"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <g clip-path="url(#clip0_7137_80)">
